@model SewingCompany.DbModels.Provider

@{
    ViewData["Title"] = "Details";
}
<div>
    <a class="classic-button" asp-action="Index">&lt; Back to List</a>
</div>
<h1>Details</h1>

<div>
    <h4>Provider</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaterialAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaterialAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Materials)
        </dt>
        <dd class="col-sm-10">

            @if (Model.Materials.Count == 0)
            {
                @("none")
            }
            else
            {
                @foreach (var mat in Model.Materials)
                {
                    @($"Product name: { mat.Name}, Type: { mat.Type}")
                    <a class="change-button edit-button" asp-controller="Materials" asp-action="Edit" asp-route-id="@mat.Id">Edit</a><a class="change-button details-button" asp-controller="Materials" asp-action="Details" asp-route-id="@mat.Id">Details</a><a class="change-button delete-button" asp-controller="Materials" asp-action="Delete" asp-route-id="@mat.Id">Delete</a>
                    <br />
                    <br />
                }
            }
    </dl>
</div>
<div class="center-button">
    <a class="classic-button" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</div>

@model SewingCompany.DbModels.Product

@{
    ViewData["Title"] = "Details";
}
<div>
    <a class="classic-button" asp-action="Index">&lt; Back to List</a>
</div>
<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Materials
        </dt>
        <dd class = "col-sm-10">
            @if (Model.MaterialLists.Count == 0)
            {
                @("none")
            }
            else
            {
                @foreach (var matList in Model.MaterialLists)
                {

                    @("Material name: ")
                    @Html.DisplayFor(modelItem => matList.Material.Name)
                    @(", Material amount: ")
                    @Html.DisplayFor(modelItem => matList.MaterialAmount)
                    <a class="change-button edit-button" asp-controller="Materials" asp-action="Edit" asp-route-id="@matList.Material.Id">Edit</a><a class="change-button details-button" asp-controller="Materials" asp-action="Details" asp-route-id="@matList.Material.Id">Details</a><a class="change-button delete-button" asp-controller="Materials" asp-action="Delete" asp-route-id="@matList.Material.Id">Delete</a>
                    <br />
                    <br />
                }
            }
        </dd>
    </dl>
</div>
<div class="center-button">
    <a class="classic-button" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</div>
